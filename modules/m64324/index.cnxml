                              <m:mn>0</m:mn>
                            </m:mrow>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mi>T</m:mi>
                            </m:mrow>
                          </m:msubsup>
                          <m:mi>x</m:mi>
                          <m:mo stretchy="false">(</m:mo>
                          <m:mi>t</m:mi>
                          <m:mo stretchy="false">)</m:mo>
                          <m:msup>
                            <m:mi>e</m:mi>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mo>−</m:mo>
                              <m:mi>j</m:mi>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
