                              </m:mfrac>
                              <m:mi>n</m:mi>
                              <m:mi>t</m:mi>
                            </m:mrow>
                          </m:msup>
                          <m:mi>d</m:mi>
                          <m:mi>t</m:mi>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mi>T</m:mi>
                          </m:mfrac>
                          <m:msubsup>
                            <m:mo>∫</m:mo>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mn>0</m:mn>
                            </m:mrow>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mfrac>
                                <m:mi>T</m:mi>
                                <m:mn>4</m:mn>
                              </m:mfrac>
                            </m:mrow>
                          </m:msubsup>
                          <m:msup>
                            <m:mi>e</m:mi>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mo>−</m:mo>
                              <m:mi>j</m:mi>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>π</m:mi>
                                </m:mrow>
                                <m:mi>T</m:mi>
                              </m:mfrac>
                              <m:mi>n</m:mi>
                              <m:mi>t</m:mi>
                            </m:mrow>
                          </m:msup>
                          <m:mi>d</m:mi>
                          <m:mi>t</m:mi>
                          <m:mo>+</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mi>T</m:mi>
                          </m:mfrac>
                          <m:msubsup>
                            <m:mo>∫</m:mo>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>3</m:mn>
                                  <m:mi>T</m:mi>
                                </m:mrow>
                                <m:mn>4</m:mn>
                              </m:mfrac>
                            </m:mrow>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mi>T</m:mi>
                            </m:mrow>
                          </m:msubsup>
                          <m:msup>
                            <m:mi>e</m:mi>
                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mo>−</m:mo>
                              <m:mi>j</m:mi>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>π</m:mi>
                                </m:mrow>
                                <m:mi>T</m:mi>
                              </m:mfrac>
                              <m:mi>n</m:mi>
                              <m:mi>t</m:mi>
