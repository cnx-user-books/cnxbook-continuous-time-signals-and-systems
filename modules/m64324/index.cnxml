                            <m:mrow class="MJX-TeXAtom-ORD">
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:msub>
                        </m:mtd>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
