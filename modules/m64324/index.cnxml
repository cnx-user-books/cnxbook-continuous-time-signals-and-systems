                          <m:mi>t</m:mi>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mrow>
                              <m:mo>−</m:mo>
                              <m:mi>j</m:mi>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>π</m:mi>
                                </m:mrow>
                                <m:mi>T</m:mi>
                              </m:mfrac>
                              <m:mi>T</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:mfrac>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mrow class="MJX-TeXAtom-ORD">
                                <m:mo>−</m:mo>
                                <m:mi>j</m:mi>
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mn>2</m:mn>
                                    <m:mi>π</m:mi>
                                  </m:mrow>
                                  <m:mi>T</m:mi>
                                </m:mfrac>
                                <m:mfrac>
                                  <m:mi>T</m:mi>
                                  <m:mn>4</m:mn>
                                </m:mfrac>
                                <m:mi>n</m:mi>
                              </m:mrow>
                            </m:msup>
                            <m:mo>−</m:mo>
                            <m:mn>1</m:mn>
                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mo>+</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mrow>
                              <m:mo>−</m:mo>
                              <m:mi>j</m:mi>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>π</m:mi>
                                </m:mrow>
                                <m:mi>T</m:mi>
                              </m:mfrac>
                              <m:mi>T</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:mfrac>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mrow class="MJX-TeXAtom-ORD">
                                <m:mo>−</m:mo>
                                <m:mi>j</m:mi>
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mn>2</m:mn>
                                    <m:mi>π</m:mi>
                                  </m:mrow>
                                  <m:mi>T</m:mi>
                                </m:mfrac>
                                <m:mi>T</m:mi>
                                <m:mi>n</m:mi>
                              </m:mrow>
                            </m:msup>
                            <m:mo>−</m:mo>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mrow class="MJX-TeXAtom-ORD">
                                <m:mo>−</m:mo>
                                <m:mi>j</m:mi>
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mn>2</m:mn>
                                    <m:mi>π</m:mi>
                                  </m:mrow>
                                  <m:mi>T</m:mi>
                                </m:mfrac>
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mn>3</m:mn>
                                    <m:mi>T</m:mi>
                                  </m:mrow>
                                  <m:mn>4</m:mn>
                                </m:mfrac>
                                <m:mi>n</m:mi>
                              </m:mrow>
                            </m:msup>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mrow>
                              <m:mi>j</m:mi>
                              <m:mn>2</m:mn>
                              <m:mi>π</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:mfrac>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mrow class="MJX-TeXAtom-ORD">
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mo>−</m:mo>
                                    <m:mi>j</m:mi>
                                    <m:mn>3</m:mn>
                                    <m:mi>π</m:mi>
                                    <m:mi>n</m:mi>
                                  </m:mrow>
                                  <m:mn>2</m:mn>
                                </m:mfrac>
                              </m:mrow>
                            </m:msup>
                            <m:mo>−</m:mo>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mrow class="MJX-TeXAtom-ORD">
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mo>−</m:mo>
                                    <m:mi>j</m:mi>
                                    <m:mi>π</m:mi>
                                    <m:mi>n</m:mi>
                                  </m:mrow>
                                  <m:mn>2</m:mn>
                                </m:mfrac>
                              </m:mrow>
                            </m:msup>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mrow>
                              <m:mi>π</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:mfrac>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mfrac>
                              <m:mrow>
                                <m:msup>
                                  <m:mi>e</m:mi>
                                  <m:mrow class="MJX-TeXAtom-ORD">
                                    <m:mfrac>
                                      <m:mrow>
                                        <m:mi>j</m:mi>
                                        <m:mi>π</m:mi>
                                        <m:mi>n</m:mi>
                                      </m:mrow>
                                      <m:mn>2</m:mn>
                                    </m:mfrac>
                                  </m:mrow>
                                </m:msup>
                                <m:mo>−</m:mo>
                                <m:msup>
                                  <m:mi>e</m:mi>
                                  <m:mrow class="MJX-TeXAtom-ORD">
                                    <m:mfrac>
                                      <m:mrow>
                                        <m:mo>−</m:mo>
                                        <m:mi>j</m:mi>
                                        <m:mi>π</m:mi>
                                        <m:mi>n</m:mi>
                                      </m:mrow>
                                      <m:mn>2</m:mn>
                                    </m:mfrac>
                                  </m:mrow>
                                </m:msup>
                              </m:mrow>
                              <m:mrow>
                                <m:mn>2</m:mn>
                                <m:mi>j</m:mi>
                              </m:mrow>
                            </m:mfrac>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mfrac>
                            <m:mn>1</m:mn>
                            <m:mrow>
                              <m:mi>π</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
                          </m:mfrac>
                          <m:mi>sin</m:mi>
                          <m:mo>⁡</m:mo>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mfrac>
                              <m:mrow>
                                <m:mi>π</m:mi>
                                <m:mi>n</m:mi>
                              </m:mrow>
                              <m:mn>2</m:mn>
                            </m:mfrac>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mtd>
                      </m:mtr>
                      <m:mtr>
                        <m:mtd/>
                        <m:mtd>
                          <m:mi/>
                          <m:mo>=</m:mo>
                          <m:mrow class="MJX-TeXAtom-ORD">
                            <m:mtext>sinc</m:mtext>
                          </m:mrow>
                          <m:mfrac>
                            <m:mrow>
                              <m:mi>π</m:mi>
                              <m:mi>n</m:mi>
                            </m:mrow>
