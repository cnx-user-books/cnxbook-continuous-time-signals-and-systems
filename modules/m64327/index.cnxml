<metadata xmlns:md="http://cnx.rice.edu/mdml">
  <md:content-id>m64327</md:content-id>
  <md:title>Continuous-Time Impulse Response and Convolution</md:title>
  <md:abstract>
</md:abstract>
  <md:uuid>8f427cca-d878-4379-beeb-1732775c593c</md:uuid>
