    </m:mtr>
    <m:mtr>
      <m:mtd/>
      <m:mtd>
        <m:mi/>
        <m:mo>=</m:mo>
        <m:msub>
          <m:mrow>
            <m:mo>[</m:mo>
            <m:mrow>
              <m:mfrac>
                <m:mn>1</m:mn>
                <m:mi>T</m:mi>
              </m:mfrac>
              <m:msubsup>
                <m:mo>∫</m:mo>
                <m:mn>0</m:mn>
                <m:mi>T</m:mi>
              </m:msubsup>
              <m:mi>x</m:mi>
