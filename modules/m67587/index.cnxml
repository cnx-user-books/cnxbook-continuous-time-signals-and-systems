        <m:mi/>
        <m:mo>=</m:mo>
        <m:mfrac>
          <m:mn>1</m:mn>
          <m:mi>T</m:mi>
        </m:mfrac>
        <m:msubsup>
          <m:mo>∫</m:mo>
          <m:mn>0</m:mn>
          <m:mi>T</m:mi>
        </m:msubsup>
