        <m:mo stretchy="false">(</m:mo>
        <m:mi>t</m:mi>
        <m:mo stretchy="false">)</m:mo>
        <m:mrow class="MJX-TeXAtom-ORD">
          <m:mtext>  is real</m:mtext>
        </m:mrow>
        <m:mo stretchy="false">)</m:mo>
