              <m:mi>t</m:mi>
              <m:mo stretchy="false">)</m:mo>
              <m:msup>
                <m:mi>e</m:mi>
                <m:mrow class="MJX-TeXAtom-ORD">
                  <m:mo>−</m:mo>
                  <m:mi>j</m:mi>
                  <m:mi>ω</m:mi>
                  <m:mi>t</m:mi>
                </m:mrow>
              </m:msup>
