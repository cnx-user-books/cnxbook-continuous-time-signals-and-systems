          <m:mi>n</m:mi>
        </m:msub>
        <m:msup>
          <m:mi>e</m:mi>
          <m:mrow class="MJX-TeXAtom-ORD">
            <m:mi>j</m:mi>
            <m:msub>
    <m:mi>ω</m:mi>
    <m:mn>0</m:mn>
  </m:msub>

            <m:mi>n</m:mi>
            <m:mi>t</m:mi>
          </m:mrow>
        </m:msup>
      </m:mtd>
    </m:mtr>
    <m:mtr>
      <m:mtd>
        <m:msub>
          <m:mi>c</m:mi>
          <m:mi>n</m:mi>
        </m:msub>
      </m:mtd>
      <m:mtd>
        <m:mi/>
        <m:mo>=</m:mo>
        <m:mfrac>
          <m:mn>1</m:mn>
          <m:mi>T</m:mi>
        </m:mfrac>
