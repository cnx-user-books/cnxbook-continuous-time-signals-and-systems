            <m:mo>−</m:mo>
            <m:mi>j</m:mi>
            <m:msub>
              <m:mi>ω</m:mi>
              <m:mn>0</m:mn>
            </m:msub>
            <m:mi>n</m:mi>
            <m:mi>t</m:mi>
          </m:mrow>
        </m:msup>
        <m:mi>d</m:mi>
